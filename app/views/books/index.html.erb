<div class="container">
  <div class="col-lg-12">
    <div class="col-md-2">
    </div>
    <div class="col-md-10">
      <center>
        <h3>Search books here</h3>
      </center><br/>
      <table id="section_student_list">
        <thead>
          <tr>
            <th style="width: 400px;">Name</th>
            <th style="width: 130px;">Book</th>
            <th style="width: 130px;">Download Link</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td style="width: 400px;"><%= book.name %></td>
              <td style="width: 200px;"><%= image_tag book.image_url %></td>
              <td style="width: 200px;"><%= link_to "Download", book.attachment_url %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<script type="text/javascript">
  $('#section_student_list').DataTable({
    fixedColumns: true
  });
</script>