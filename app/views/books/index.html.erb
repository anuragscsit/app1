<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
    <%= flash[:notice] %>
  </div>
<% end %>
<br />
<%= link_to "New Book", new_book_path, class: "btn btn-primary" %>
<br />
<br />
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Book</th>
      <th>Download Link</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= image_tag book.image_url %></td>
        <td><%= link_to "Download", book.attachment_url %></td>
        <td><%= button_to "Delete",  book_path(book), method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{book.name}?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>