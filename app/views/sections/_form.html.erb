<div class="container">
	<%= form_for @section do |f| %>
		<% if @section.errors.any? %>
	    <div id="error_explanation">
	      <h2>
	        <%= pluralize(@section.errors.count, "error") %> prohibited
	        this section from being saved:
	      </h2>
	      <ul>
	        <% @section.errors.full_messages.each do |msg| %>
	          <li><%= msg %></li>
	        <% end %>
	      </ul>
	    </div>
	  <% end %>
		<p>
	    <%= f.label :name %><br>
	    <%= f.text_field :name %>
	  </p>
	  <p>
	    <%= f.label :course_id %><br>
	    <%= f.select :course_id, options_for_select(Course.all.collect {|p| [ p.name, p.id ] }, f.object.try(:course_id)), {include_blank: 'None'} %>
	  </p>
	  <p>
	    <%= f.submit %>
	  </p>
	<% end %>
</div>
