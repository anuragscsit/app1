<div class="container">
	<div class="col-lg-12">
		<div class="col-sm-12">
			<div class="col-sm-1">
			</div>
			<div class="col-sm-11">
				<center>
					<h3>List of <%= @section.name %> students</h3>
				</center>
				<table id="section_student_list">
					<thead>
						<tr>
							<th>Member Id</th>
							<th>Enrollement No.</th>
							<th>Name</th>
						</tr>
					</thead>
					<tbody>
						<% @section.students.each do |s| %>
							<tr>
								<td><%= link_to s.member_id, student_path(s) %></td>
								<td><%= s.enrollment_no %></td>
								<td><%= s.name %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
	$('#section_student_list').DataTable({
    fixedColumns: true
  });
</script>